          "catchphrase": "Left is colder, right is warmer!"
        },
        "sections": [
          {
            "id": "neg-1",
            "level": 1,
            "title": "Level 1: Meet the number line",
            "blocks": [
              {
                "type": "image",
                "src": "/notes/negatives/number-line.svg",
                "alt": "Number line with negatives and positives",
                "caption": "Negative numbers live to the left of 0."
              },
              {
                "type": "callout",
                "tone": "rule",
                "title": "Big idea",
                "lines": [
                  "A negative sign can mean ‚Äúopposite direction.‚Äù",
                  "-5 is 5 steps left of 0."
                ]
              },
              {
                "type": "mini_quiz",
                "question": "Which is smaller: -2 or -7?",
                "answer": "-7",
                "explain": "-7 is farther left on the number line."
              }
            ]
          },
          {
            "id": "neg-2",
            "level": 2,
            "title": "Level 2: Adding integers (movement)",
            "blocks": [
              {
                "type": "bullets",
                "title": "Movement rule",
                "items": [
                  "Start at the first number.",
                  "Adding a positive moves right.",
                  "Adding a negative moves left."
                ]
              },
              {
                "type": "example",
                "prompt": "-2 + 5 = ?",
                "steps": [
                  "Start at -2.",
                  "Move 5 steps right.",
                  "Land at 3."
                ],
                "answer": "3"
              },
              {
                "type": "example",
                "prompt": "4 + (-6) = ?",
                "steps": [
                  "Start at 4.",
                  "Add -6 means move 6 left.",
                  "Land at -2."
                ],
                "answer": "-2"
              }
            ]
          },
          {
            "id": "neg-3",
            "level": 3,
            "title": "Level 3: Subtracting integers (add the opposite)",
            "blocks": [
              {
                "type": "callout",
                "tone": "rule",
                "title": "Power rule",
                "lines": [
                  "Subtracting a number = adding its opposite.",
                  "a ‚àí b = a + (‚àíb)"
                ]
              },
              {
                "type": "example",
                "prompt": "2 ‚àí (‚àí3) = ?",
                "steps": [
                  "Turn subtraction into adding the opposite: 2 + 3",
                  "2 + 3 = 5"
                ],
                "answer": "5"
              },
              {
                "type": "callout",
                "tone": "tip",
                "title": "Quick check",
                "lines": [
                  "Subtracting a negative usually makes your answer bigger."
                ]
              }
            ]
          },
          {
            "id": "neg-4",
            "level": 4,
            "title": "Level 4: Multiply & divide negatives (sign rules)",
            "blocks": [
              {
                "type": "callout",
                "tone": "rule",
                "title": "Sign shortcut",
                "lines": [
                  "Same signs ‚Üí positive",
                  "Different signs ‚Üí negative"
                ]
              },
              {
                "type": "mini_quiz",
                "question": "(-3) √ó (-4) = ?",
                "answer": "12",
                "explain": "Same signs, so positive. 3√ó4=12."
              },
              {
                "type": "mini_quiz",
                "question": "(-12) √∑ 3 = ?",
                "answer": "-4",
                "explain": "Different signs, so negative. 12√∑3=4."
              }
            ]
          },
          {
            "id": "neg-5",
            "level": 5,
            "title": "Level 5: Negatives with fractions & parentheses",
            "blocks": [
              {
                "type": "callout",
                "tone": "warn",
                "title": "Common review error",
                "lines": [
                  "Forgetting parentheses changes meaning.",
                  "Example: -(2 + 3) = -5, but -2 + 3 = 1"
                ]
              },
              {
                "type": "example",
                "prompt": "-(1/2) + (3/2) = ?",
                "steps": [
                  "Same denominator, add numerators: -1 + 3 = 2",
                  "2/2 = 1"
                ],
                "answer": "1"
              }
            ]
          },
          {
            "id": "neg-6",
            "level": 6,
            "title": "Level 6: Mistakes vs review errors",
            "blocks": [
              {
                "type": "callout",
                "tone": "warn",
                "title": "Common misconceptions",
                "lines": [
                  "Thinking subtracting always makes smaller (not true with negatives)",
                  "Mixing up 'adding a negative' with 'subtracting a negative'"
                ]
              },
              {
                "type": "callout",
                "tone": "tip",
                "title": "Review errors (slips) to track",
                "lines": [
                  "Dropped a negative sign while copying",
                  "Forgot to flip the sign when subtracting a negative",
                  "Arithmetic slip (like 6‚àí9 = 3 instead of -3)"
                ]
              }
            ]
          },
          {
            "id": "neg-links",
            "level": 99,
            "title": "Extra practice (optional)",
            "blocks": [
              {
                "type": "links",
                "items": [
                  {
                    "label": "Khan Academy: Adding & subtracting negative numbers (video examples)",
                    "url": "https://www.khanacademy.org/math/algebra-basics/basic-alg-foundations/alg-basics-negative-numbers/v/adding-and-subtracting-negative-number-examples"
                  },
                  {
                    "label": "Khan Academy: Integers add & subtract (course unit)",
